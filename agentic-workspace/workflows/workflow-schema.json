{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Schema",
  "description": "Schema for defining multi-agent workflows",
  "type": "object",
  "required": ["name", "version", "steps"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique workflow identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "description": "Workflow description"
    },
    "inputs": {
      "type": "object",
      "description": "Required workflow inputs"
    },
    "outputs": {
      "type": "object",
      "description": "Expected workflow outputs"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "agent", "action"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Step identifier"
          },
          "agent": {
            "type": "string",
            "description": "Agent to execute this step"
          },
          "action": {
            "type": "string",
            "description": "Action for agent to perform"
          },
          "params": {
            "type": "object",
            "description": "Parameters for the action"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Steps that must complete before this step"
          },
          "retry": {
            "type": "object",
            "properties": {
              "max_attempts": {
                "type": "integer",
                "minimum": 1
              },
              "backoff": {
                "type": "string",
                "enum": ["linear", "exponential"]
              }
            }
          },
          "on_failure": {
            "type": "string",
            "enum": ["continue", "stop", "retry"],
            "description": "Behavior when step fails"
          }
        }
      }
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["fail-fast", "continue", "partial-success"]
        },
        "notification": {
          "type": "object",
          "properties": {
            "on_failure": {
              "type": "boolean"
            },
            "on_success": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "parallel": {
      "type": "boolean",
      "description": "Whether steps can execute in parallel (when no dependencies)"
    }
  }
}
