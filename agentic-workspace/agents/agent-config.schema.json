{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Configuration Schema",
  "description": "Schema for defining agentic configurations",
  "type": "object",
  "required": ["name", "type", "version"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique name identifier for the agent"
    },
    "type": {
      "type": "string",
      "enum": ["task-executor", "researcher", "planner", "reviewer", "coordinator"],
      "description": "Type of agent functionality"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the agent"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of agent capabilities"
    },
    "model": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["anthropic", "openai", "local"]
        },
        "name": {
          "type": "string",
          "description": "Model identifier (e.g., claude-opus-4-5)"
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of tool names this agent can use"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of capabilities this agent provides"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Other agents this agent depends on"
    },
    "config": {
      "type": "object",
      "description": "Additional agent-specific configuration"
    }
  }
}
